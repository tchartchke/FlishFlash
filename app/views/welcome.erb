<!-- Banner -->
<section id="banner">
	<div class="inner">
		<h1>This is FlishFlash</h1>
		<p>Like Flashcards. But just kinda.</a></p>
		<ul class="actions">
			<li><a href="/signup" class="button alt scrolly big">Sign Up</a></li>
			<li><a href="/signin" class="button alt scrolly big">Sign In</a></li>
		</ul>
	</div>
</section>

<!-- Contact -->
<section id="contact">
	<!-- Social -->
	<div class="social column">
		<h3>About Me</h3>
		<p>
		<% User.all.each do |user| %>
			<%= user.username %><br>
			<% user.collections.each do |collection| %>
				+<%= collection.name %><br>
				<% collection.cards.each do |card| %>
					- <%= card.front %>, <%= card.back %> => <%= card.info %><br>
				<% end %>
			<% end %>
			<br><br>
		<% end %>
		</p>

	</div> 

	<!-- Form -->
	<div class="column">
		<h3>Get in Touch</h3>
		<form action="#" method="post">
			<div class="field half first">
				<label for="name">Name</label>
				<input name="name" id="name" type="text" placeholder="Name">
			</div>
			<div class="field half">
				<label for="email">Email</label>
				<input name="email" id="email" type="email" placeholder="Email">
			</div>
			<div class="field">
				<label for="message">Message</label>
				<textarea name="message" id="message" rows="6" placeholder="Message"></textarea>
			</div>
			<ul class="actions">
				<li><input value="Send Message" class="button" type="submit"></li>
			</ul>
		</form>
	</div>

</section> 