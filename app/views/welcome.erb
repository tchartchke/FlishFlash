						<section id="contact">
							<!-- Social -->
								<div class="social column">
									<h3>About Me</h3>
								      <p>
      <% User.all.each do |user| %>
        <%= user.username %><br>
        <% user.collections.each do |collection| %>
          +<%= collection.name %><br>
          <% collection.cards.each do |card| %>
            - <%= card.front %>, <%= card.back %> => <%= card.info %><br>
          <% end %>
        <% end %>
        <br><br>
      <% end %>
      </p>

								</div> 

